<% if users.errors.any? %>
  <div>
    <ul>
      <% users.errors.full_messages.each do |message| %>
        <li class = "inline-flex items-center px-6 py-2 mx-2 my-4 text-white bg-red-500 rounded">
          <%= message.gsub(/^Email /, "").gsub(/^Password /, "") %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
