<section class="m-5">
  <%= form_with url: session_path do |f| %>

    <div class = "my-4">
      <%= f.label :信箱 %>
      <%= f.text_field :email, class: "form-field" %>
    </div>

    <div class = "my-4">
      <%= f.label :密碼 %>
      <%= f.text_field :password, class: "form-field" %>
    </div>

    <div class = "my-4">
      <%= f.submit "會員登入", class: "main-btn" %>
      <%= link_to '回上一頁', root_path, class: "second-btn" %>      
    </div>

  <% end %>
</section>
