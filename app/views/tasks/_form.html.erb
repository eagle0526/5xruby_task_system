<section>
  <%= form_with model: @task do |f| %>

    <div class = "my-4">
      <%= f.label :任務標題 %>
      <%= f.text_field :title, class: "form-field" %>
    </div>

    <div class = "my-4">
      <%= f.label :任務內容 %>
      <%= f.text_area :content, class: "form-field" %>
    </div>

    <div class = "my-4">
      <%= f.label :任務優先度 %>
      <%= f.select :priority, [["High", 1], ["Medium", 2], ["Low", 3]], class: "w-full" %>
    </div>

    <div class = "my-4">
      <%= f.label :任務狀態 %>
      <%= f.select :state, [["Pending", 1], ["Doing", 2], ["Ending", 3]], class: "w-full" %>
    </div>

    <div class = "my-4">
      <%= f.label :分類 %>
      <%= f.text_field :classification, class: "form-field" %>
    </div>

    <div class = "my-4">
      <%= f.label :開始時間 %>
      <%= f.text_field :start_time, class: "form-field",  data: {
                                                            controller: "flatpickr",
                                                            flatpickr_date_format: "Y-m-d   h:i",
                                                            flatpickr_min_date: Time.zone.now,
                                                            flatpickr_enable_time: true,
                                                          } %>
    </div>

    <div class = "my-4">
      <%= f.label :結束時間 %>
      <%= f.text_field :end_time, class: "form-field",  data: {
                                                            controller: "flatpickr",
                                                            flatpickr_date_format: "Y-m-d   h:i",
                                                            flatpickr_min_date: Time.zone.now,
                                                            flatpickr_enable_time: true,
                                                          } %>
    </div>



    <div class = "my-4">
      <%= f.submit "編輯任務" ,class: "main-btn" %>
      <%= link_to '回上一頁', root_path, class: "second-btn" %>      
    </div>

  <% end %>

</section>
