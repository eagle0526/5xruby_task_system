<% if tasks.errors.any? %>
  <div>
    <ul>
      <% tasks.errors.full_messages.each do |message| %>
        <li class = "inline-flex items-center px-6 py-2 mx-2 my-4 text-white bg-red-500 rounded">
          <%= message.gsub(/^Title /, "").gsub(/^Content /, "").gsub(/^User /, "").gsub(/^Start time/, "").gsub(/^End time/, "") %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
